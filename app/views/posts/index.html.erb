<p id="notice"><%= notice %></p>

<h1>Posts</h1>
<html lang="en">
<table>
  <thead>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <tr>
      <th>Title</th>
      <th>Body</th>

      <th colspan="4"></th>
    </tr>
  </thead>
<div class="container">
  <header class="blog-header py-3">
    <div class="row flex-nowrap justify-content-between align-items-center">
      <div class="col-4 pt-1">
        <a class="link-secondary" href="#">Subscribe</a>
      </div>
      <div class="col-4 text-center">
        <a class="blog-header-logo text-dark" href="#">Large</a>
      </div>
      <div class="col-4 d-flex justify-content-end align-items-center">
        <a class="link-secondary" href="#" aria-label="Search">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="mx-3" role="img" viewBox="0 0 24 24"><title>Search</title><circle cx="10.5" cy="10.5" r="7.5"/><path d="M21 21l-5.2-5.2"/></svg>
        </a>
        <a class="btn btn-sm btn-outline-secondary" href="#">Sign up</a>
      </div>
    </div>
  </header>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.body %></td>
        <td><%= link_to post.status, toggle_status_post_path(post)%></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) if logged_in?(:site_admin) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } if logged_in?(:site_admin)%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
</html>


<%= link_to 'New Post', new_post_path if logged_in?(:site_admin) %>



