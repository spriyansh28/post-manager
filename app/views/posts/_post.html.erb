<div class="blog-post blog-body">
  <h2 class="blog-post-title"><%= link_to post.title, post %></h2>
  <p class="blog-post-meta">Published <%= distance_of_time_in_words(post.created_at, Time.now) %> ago</p>
  
  <%= render partial: 'posts/admin_actions', locals: { post: post } %>

  <p>
    <%= truncate(markdown(post.body), length: 600, escape: false) %>
    <%= link_to "Continue reading", post %>
  </p>
</div>
